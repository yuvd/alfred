



<div class="background-image">
  <div class="container">

    <% if user_signed_in? %>



    <p class="mt-5">Welcome to Alfred, <%= current_user.name %>. I am Alfred, your personal Assistant.</p>
    <p>Where do you want to go?</p>


    <%= render 'address_form.erb' %>

    <div class="nav-item dropdown mt-3 d-flex justify-content-center">

      <%= image_tag current_user.photo.blank?  ?  "Placeholder-Avatar.jpg" : current_user.photo , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Profile", profile_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
      <% else %>

      <h1 class="mt-5"> Hi friend,</h1>
      <p class="mt-5 ">I am Alfred, your personal Assistant.</p>
      <p>I would love to get to know you.</p>

      <%= link_to "Sign-up", 'users/sign_up', class: "btn button-registration mt-5" %>


      <% end %>
    </div>
  </div>


