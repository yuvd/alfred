<h1>Forums#show</h1>

<div id="avatars-carousel" class="carousel slide" data-ride="carousel">
  <%first_user_avatar_drawn = false%>
  <%@forum.users.each do |user|%>
    <%!first_user_avatar_drawn ? "<div class='carousel-item active'>" : "<div class='carousel-item'>"%>
      <img src="<%=user.photo%>" class="avatar">
    <%first_user_avatar_drawn = true%>
    </div>
  <%end%>
</div>


<div class="container">
<%@posts.each do |post|%>
<div class="notification">
  <img src="<%=post.user.photo%>" class="avatar-large" />
  <div class="notification-content">
    <p><small><strong><%=post.user.nickname%></strong> on <%=post.created_at.strftime("%d/%m/%y at %I:%M%p")%></small></p>
    <p><%=post.description%></p>
    <%if current_user.post_votes.where(post: post).empty?%>
    <p><%= link_to forum_post_post_votes_path(forum_id: post.forum, post_id: post), method: :post, remote: true do %>
    <i class="far fa-thumbs-up"></i>
    <%end%>
    <%else%>
      <p><%= link_to forum_post_post_vote_path(forum_id: post.forum, post_id: post), method: :delete, remote: true do %>
      <i class="far fa-thumbs-down"></i>
      <%end%>
    <% end %>
    </p>
    <p data-votes-counter-id="<%=post.id%>"><%=post.post_votes.count%> votes</p>
    <%if current_user == post.user%>
      <div class="notification-actions">
        <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
        <a href="#">Delete <i class="far fa-trash-alt"></i></a>
      </div>
    <%end%>
  </div>
</div>
<%end%>
</div>
<%=link_to "new post", new_forum_post_path(@forum)%>