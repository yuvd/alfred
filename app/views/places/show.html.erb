
<div class="box-scroll">s
  <div class="categories-scroll">
    <% Category.all.each do |category| %>
    <div class=<% if current_page?("/places?category=#{category.name}") %>"active-tab"<% end %>>
      <%= link_to category.name, places_path(category: category.name), class: "inactive-tab" %>
    </div>
    <% end %>
  </div>
</div>

<div class="box ">
  <div class="place_title">
    <h2 class="place_name"><%= @place.name %></h2>
  </div>


  <div class="box_address">
    <div class="box_overlay">
    <div class="d-flex justify-content-between mt-5">
      <div class="d-flex justify-content-between align-items-center">
        <p class="ml-3"><i class="fa fa-map-pin"></i></p>
        <p class="place_address ml-3"><%= @place.location %></p>
      </div>

      <div>
        <p class="map mr-3">Forum <i class="fa fa-comments"></i></p>
      </div>
    </div>

<div class="d-flex justify-content-between">
  <div>
      <div class="star-rating ml-3">
        <% if @avg_rating == 5 %>
        <% 5.times do %>
        <i class="fas fa-star"></i>
        <% end %>
        <% else %>
        <% @avg_rating.times do %>s
        <i class="fas fa-star"></i>
        <% end %>
        <% (5 - @avg_rating).times do %>
        <i class="far fa-star"></i>
        <% end %>
        <% end %>
      </div>
      <p class="mt-3 ml-3"><em><%= "#{@reviews.size} reviews" %></em></p>
      <% if @place.price_cents == 0 %>
      <p class="ml-3"> $ </p>
      <% end %>
  </div>

  <div>
      <p>
        <button class="btn-ghost mt-2" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Add to schedule
        </button>
      </p>

      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <div class="container">
            <div class="form-wrapper d-flex justify-content-center align-items-center">

              <%= render 'bookmarks/form' %>

            </div>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="line">
  </div>
     <h5 class="ml-3 mt-3 mb-5">Description</h5>
    <p><%= @place.description %></p>
  </div>

<div class="line">
  </div>
     <h5 class="ml-3 mt-3 mb-5">Pictures</h5>


<div class="line">
  </div>
     <h5 class="ml-3 mt-3 mb-5">Classes</h5>
</div>

</div>

