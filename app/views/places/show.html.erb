
<% @categories.each do |category| %>
<%= link_to category.name, places_path(category: category.name) %>
<% end %>

<div class="box">

  <h2><%= @place.name %></h2>
  <p><%= @place.location %></p>
  <% if @place.price_cents == 0 %>
    <p> $ </p>
  <% end %>


  <div class="star-rating"> <% (1..@avg_rating).each do %>
    *
    <% end %>
  </div>
  <p><em><%= "based on #{@reviews.size} reviews" %></em></p>

  <h5>DESCRIPTION</h5>
  <p><%= @place.description %></p>


  <p>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Add to schedule
    </button>
  </p>

  <div class="collapse" id="collapseExample">
  <div class="card card-body">
    <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Flatpickr Demo</h2>

      <%= render 'bookmarks/form' %>
    </div>
  </div>
  </div>
</div>

</div>



