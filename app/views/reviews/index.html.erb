

            <div class="reviews_frame">
              <div class="reviews_placename">
                <h1>Reviews</h1>
                <p><%= @place.name %></p>

              </div>

            <% @place.reviews.each do |review| %>
              <div class="notification_body">
                <div class="avatar_frame">
                  <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-square" />
                </div>
                <div class="notification-content">
                  <div class="notification-top">
                  <p id="reviewer"><%= review.user.name %></p>
                  <p><small><%= review.created_at.to_date %></small></p>

                  </div>
                  <div class="review_content">
                  <div class="star-rating">
                    <% if review.rating == 5 %>
                      <% 5.times do %>
                        <i class="fas fa-star star"></i>
                      <% end %>
                    <% else %>
                      <% review.rating.times do %>
                        <i class="fas fa-star star"></i>
                      <% end %>
                    <% end %>
                    <% (5 - review.rating).times do %>
                      <i class="far fa-star star"></i>
                    <% end %>

                  </div>

                  <p id="review_text"><%= review.content %></p>
                  </div>
                </div>
                <div class="styling_lines_box"></div>
              </div>
            <% end %>
            </div>





